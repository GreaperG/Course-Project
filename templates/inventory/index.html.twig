{% extends 'base.html.twig' %}

{% block javascripts %}
{{ parent() }}
   <script src="{{ asset('js/inventory-index.js') }}"></script>
{% endblock %}

{% block title %}Inventories{% endblock %}

{% block body %}



    <div class="container mt-5">
    <h2>All Inventories</h2>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="select-all-inventorys-index"></th>
                <th class="text-center">Id</th>
                <th>Category</th>
                <th>Items</th>
            </tr>
        </thead>
        <tbody>
        {% for inventory in pagination %}
            <tr>
                <td>
                    <input type="checkbox"
                           name="inventorys_ids[]"
                           value="{{ inventory.id }}"
                           data-csrf="{{ csrf_token('delete' ~ inventory.id) }}">
                    </td>
                <td class="text-center fw-bold">
                    <span class="badge bg-primary">{{ inventory.id }}</span>
                </td>
                <td class="fw-semibold">{{ inventory.category }}</td>
                <td style="max-width: 300px;">
                    <div class="d-flex flex-warp gap-1" style="max-height: 100px; overflow-y: auto;">
                        <span class="badge bg-secondary">{{ inventory.items|length }}</span>
                    </div>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

        <div class="btn-toolbar mb-3" role="toolbar">
            <div class="btn-group me-2" role="group">
                <a href="{{ path('app_inventory_new') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>

            <div class="btn-group me-2" role="group">
                <button type="button"
                        id="addItemBtn"
                        class="btn btn-primary btn-sm"
                        disabled>
                    <i class="fas fa-plus"></i> Add Item to Selected
                </button>

                <div class="btn-group me-2" role="group">
                <button type="button"
                    id="editSelectedBtn"
                    class="btn btn-outline-secondary btn-sm"
                    disabled>
                <i class="fas fa-edit"></i> Edit Selected
            </button>

                <button type="button"
                        id="showInventoryBtn"
                        class="btn btn-outline-secondary btn-sm"
                        disabled>
                    <i class="fas fa-eye"></i> Show Inventory
                </button>

            <button type="button"
                    id="deleteSelectedBtn"
                    class="btn btn-outline-danger btn-sm"
                    disabled>
                <i class="fas fa-trash"></i>Delete Selected
            </button>
                </div>
            </div>
        </div>
    </div>


{% endblock %}


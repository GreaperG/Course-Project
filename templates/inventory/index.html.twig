{% extends 'base.html.twig' %}

{% block title %}Inventories{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href={{ path('app_inventory_index') }}>Inventory's</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_home_page') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('app_home_userPage')}}">User profile</a>
                    </li>
                </ul>

                <form action="{{ path('app_search') }}" method="get" class="d-flex">
                    <input class="form-control me-2"
                           type="search"
                           name="q"
                           placeholder="Search..."
                           value="{{ app.request.query.get('q') }}">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>




    <div class="container mt-5">
    <h2>All Inventories</h2>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th><input type="checkbox" id="select-all"></th>
                <th class="text-center">Id</th>
                <th>Category</th>
                <th>Items</th>
            </tr>
        </thead>
        <tbody>
        {% for inventory in pagination %}
            <tr>
                <td>
                    <input type="checkbox"
                           name="inventorys_ids[]"
                           value="{{ inventory.id }}"
                           data-csrf="{{ csrf_token('delete' ~ inventory.id) }}">
                    </td>
                <td class="text-center fw-bold">
                    <span class="badge bg-primary">{{ inventory.id }}</span>
                </td>
                <td class="fw-semibold">{{ inventory.category }}</td>
                <td style="max-width: 300px;">
                    <div class="d-flex flex-warp gap-1" style="max-height: 100px; overflow-y: auto;">
                        <span class="badge bg-secondary">{{ inventory.items|length }}</span>
                    </div>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

        <div class="btn-toolbar mb-3" role="toolbar">
            <div class="btn-group me-2" role="group">
                <a href="{{ path('app_inventory_new') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>

            <div class="btn-group me-2" role="group">
                <button type="button"
                        id="addItemBtn"
                        class="btn btn-primary btn-sm"
                        disabled>
                    <i class="fas fa-plus"></i> Add Item to Selected
                </button>

                <div class="btn-group me-2" role="group">
                <button type="button"
                    id="editSelectedBtn"
                    class="btn btn-outline-secondary btn-sm"
                    disabled>
                <i class="fas fa-edit"></i> Edit Selected
            </button>

            <button type="button"
                    id="deleteSelectedBtn"
                    class="btn btn-outline-danger btn-sm"
                    disabled>
                <i class="fas fa-trash"></i>Delete Selected
            </button>
                </div>


    <script>
        document.getElementById('select-all').addEventListener('change', function() {
            document.querySelectorAll('input[name="inventorys_ids[]"]').forEach(cb => cb.checked = this.checked);
        });

        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        tooltipTriggerList.map(function(el) {
            return new bootstrap.Tooltip(el)
        });
    </script>

            <script>

                document.getElementById('editSelectedBtn').addEventListener('click', function() {
                    const selected = document.querySelector('input[name="inventorys_ids[]"]:checked');

                    if (selected) {
                        // Берём ID первого выбранного
                        const id = selected.value;
                        // Переходим на edit
                        window.location.href = '/inventory/' + id + '/edit';
                    } else {
                        alert('Select an inventory first!');
                    }
                });

                // 3. Включаем кнопку при выборе checkbox
                document.querySelectorAll('input[name="inventorys_ids[]"]').forEach(cb => {
                    cb.addEventListener('change', function() {
                        const hasSelection = document.querySelectorAll('input[name="inventorys_ids[]"]:checked').length > 0;
                        document.getElementById('editSelectedBtn').disabled = !hasSelection;
                    });
                });
            </script>

<script>
    document.getElementById('addItemBtn').addEventListener('click', function() {
        const selected = document.querySelector('input[name="inventorys_ids[]"]:checked');

        if (selected) {
            const inventoryId = parseInt(selected.value);
            window.location.href = `/inventory/${inventoryId}/createItem`;
            // Или с использованием path():
            // window.location.href = Routing.generate('app_inventory_item_create', {inventoryId: inventoryId});
        }
    });

    // Включаем/выключаем кнопки при выборе чекбокса
    document.querySelectorAll('input[name="inventorys_ids[]"]').forEach(cb => {
        cb.addEventListener('change', function() {
            const hasSelection = document.querySelectorAll('input[name="inventorys_ids[]"]:checked').length > 0;
            document.getElementById('addItemBtn').disabled = !hasSelection;
            document.getElementById('editSelectedBtn').disabled = !hasSelection;
            document.getElementById('deleteSelectedBtn').disabled = !hasSelection;
        });
    });
</script>




{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Inventories{% endblock %}

{% block body %}
    <h1>Inventories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Items</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inventory in inventories %}
            <tr>
                <td>{{ inventory.id }}</td>
                <td>{{ inventory.category }}</td>
                <td>    {% for item in inventory.items %}
                        {{ item.customId }}{% if not loop.last %}, {% endif %}
                    {% else %}
                        No items
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_inventory_show', {'id': inventory.id}) }}">show</a>
                    <a href="{{ path('app_inventory_edit', {'id': inventory.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_inventory_new') }}">Create new</a>
{% endblock %}

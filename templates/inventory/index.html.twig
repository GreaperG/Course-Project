{% extends 'base.html.twig' %}

{% block title %}Inventories{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href={{ path('app_inventory_index') }}>Inventory's</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_home_page') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('app_home_userPage')}}">User profile</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"/>
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>




    <div class="container mt-5">
    <h2>Inventories</h2>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Id</th>
                <th>Category</th>
                <th>Items</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inventory in inventories %}
            <tr>
                <td class="text-center fw-bold">
                    <span class="badge bg-primary">{{ inventory.id }}</span>
                </td>
                <td class="fw-semibold">{{ inventory.category }}</td>
                <td style="max-width: 300px;">
                    <div class="d-flex flex-warp gap-1" style="max-height: 100px; overflow-y: auto;">
                    {% for item in inventory.items %}
                        <span class="badge bg-secondary">{{ item.customId }}</span>
                            {% if not loop.last %}, {% endif %}
                    {% else %}
                        <span class="badge bg-light text-dark border">No items</span>
                    {% endfor %}
                    </div>
                <td>
                    <div class="d-flex gap-2">
                        <a href="{{ path('app_inventory_show', {'id': inventory.id}) }}"
                           class="btn btn-sm btn-outline-dark">
                            <i class="fas fa-eye me-1"></i>View
                        </a>
                        <a href="{{ path('app_inventory_edit', {'id': inventory.id}) }}"
                           class="btn btn-sm btn-outline-dark">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_inventory_new') }}" class="btn btn-primary">
        <i class="fas fa-save"></i>Create new
    </a>
    </div>
{% endblock %}

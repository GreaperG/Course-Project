{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



    <div class="page-container">
        <div class="simple-sidebar">
            <div class="sidebar-block">
                <h4 class="sidebar-title">ðŸ“¦ My inventories</h4>
                <div class="inventory-list">
                    {% for inventory in inventories %}
                        <div class="inventory-item">
                            <div class="inventory-title">{{ inventory.title }}</div>
                            <div class="inventory-description">{{ inventory.description }}</div>
                            <div class="inventory-category">{{ inventory.category }}</div>
                        </div>
                    {% else %}
                        <p class="no-inventories">No inventories</p>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="main-content">
            <h1>Hello, {{ user.username }}!</h1>
            {% if is_granted('ROLE_ADMIN') %}
            <h2>Administrator Account</h2>
            {% else %}
            <h2> User Account</h2>
            {% endif %}
            <h5 class="mt-3">
                <a href="{{ path('app_home_page') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i>Go to HomePage
                </a>
            </h5>
        </div>
        <div>

        </div>
    </div>
{% endblock %}

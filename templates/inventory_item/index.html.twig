{% extends 'base.html.twig' %}

{% block title %} Items - {{ inventory.title }} {% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href={{ path('app_inventory_index') }}>Inventory's</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_home_page') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('app_home_userPage')}}">User profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('admin') }}">Admin Panel</a>
                    </li>
                </ul>

                <form action="{{ path('app_search') }}" method="get" class="d-flex">
                    <input class="form-control me-2"
                           type="search"
                           name="q"
                           placeholder="Search..."
                           value="{{ app.request.query.get('q') }}">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>


<div class="container mt-5">
    <div style="padding: 20px;">
        <h1>Items in inventory "{{ inventory.title }}"</h1>
        {#  <p>Inventory ID: {{ inventory.id }}</p>#}

            {% if pagination.getTotalItemCount > 0 %}
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                    <tr>
                        <th><input type="checkbox" id="select-all"></th>
                        <th>CustomId</th>
                        {% for attribute in inventory.inventoryAttributes %}
                           <th>{{ attribute.name }}</th>
                        {% endfor %}
                        <th>Created By</th>
                        <th>Created At</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in pagination %}
                        <tr>
                            <td><input type="checkbox" name="items_ids[]" value="{{ item.id }}"></td>
                            <td>{{ item.customId }}</td>
                            {% for attribute in inventory.inventoryAttributes %}
                                <td>
                                    {% set valueFound = false %}
                                    {% for attrValue in item.itemAttributeValues %}
                                        {% if attrValue.attribute.id == attribute.id %}
                                            {% if attribute.type.value == 'bool' %}
                                                {% if attrValue.value == '1' or attrValue.value == 'true' %}
                                                    <span class="badge bg-success">✓ Yes</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">✗ No</span>
                                                {% endif %}
                                            {% elseif attribute.type.value == 'int' %}
                                                <span class="text-end d-block">{{ attrValue.value }}</span>
                                            {% else %}
                                                {{ attrValue.value }}
                                            {% endif %}
                                            {% set valueFound = true %}
                                        {% endif %}

                                    {% endfor %}

                                    {% if not valueFound %}
                                        <span class="text-muted fst-italic">-</span>
                                    {% endif %}
                                </td>
                            {% endfor %}
                            <td>{{ item.createdBy.username }}</td>
                            <td>{{ item.createdAt|date('Y-m-d H:i') }}</td>
                        </tr>
                    {% endfor %}
                </table>
            {% else %}
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(pagination) }}
                </div>
                <div class="alert alert-info">
                    No items yet.
                    <a href="{{ path('app_inventory_item_create', {'inventoryId': inventory.id}) }}">
                        Create the first one!
                    </a>
                </div>
            {% endif %}


        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group me-2" role="group">
                <a href="{{ path('app_inventory_item_create', {'inventoryId': inventory.id}) }}" class="btn btn-primary">
                    <i class="fas fa-save"></i>Add New Item
                </a>
            </div>

            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group me-2" role="group">
                    <a href="{{ path('app_inventory_index') }}" class="btn btn-outline-dark">
                        <i class="fas fa-arrow-left"></i>Back to Inventories
                    </a>
                </div>

                <button type="button"
                        id="deleteSelectedBtn"
                        class="btn btn-outline-danger"
                        disabled>
                    <i class="fas fa-trash"></i> Delete Selected
                </button>
    </div>
</div>
        <script>
            document.getElementById('select-all').addEventListener('change', function() {
                document.querySelectorAll('input[name="items_ids[]"]').forEach(cb => cb.checked = this.checked);
            });

            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            tooltipTriggerList.map(function(el) {
                return new bootstrap.Tooltip(el)
            });
        </script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const deleteBtn = document.getElementById('deleteSelectedBtn');

                document.querySelectorAll('input[name="items_ids[]"]').forEach(cb => {
                    cb.addEventListener('change', function() {
                        const hasSelection = document.querySelectorAll('input[name="items_ids[]"]:checked').length > 0;
                        deleteBtn.disabled = !hasSelection;
                    });
                });


                deleteBtn.addEventListener('click', function() {
                    const selected = document.querySelector('input[name="items_ids[]"]:checked');

                    if (selected && confirm('Delete selected item?')) {
                        const itemId = selected.value;
                        const inventoryId = {{ inventory.id }};


                        const csrfToken = document.querySelector(`input[name="_token"][value*="${itemId}"]`)?.value
                            || '{{ csrf_token("delete") }}';

                        const form = document.createElement('form');
                        form.method = 'POST';
                        form.action = `/inventory/${inventoryId}/item/${itemId}/delete`;

                        const csrf = document.createElement('input');
                        csrf.type = 'hidden';
                        csrf.name = '_token';
                        csrf.value = csrfToken;

                        form.appendChild(csrf);
                        document.body.appendChild(form);
                        form.submit();
                    }
                });
            });
        </script>
    </div>
</div>
{% endblock %}


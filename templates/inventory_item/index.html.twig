{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/item-index.js') }}"></script>
{% endblock %}

{% block title %} Items - {{ inventory.title }} {% endblock %}

{% block body %}


<div class="container mt-5">
    <div style="padding: 20px;">
        <h1>Items in inventory "{{ inventory.title }}"</h1>
        {#  <p>Inventory ID: {{ inventory.id }}</p>#}

            {% if pagination.getTotalItemCount > 0 %}
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                    <tr>
                        <th><input type="checkbox" id="select-all-items-index"></th>
                        <th>CustomId</th>
                        {% for attribute in inventory.inventoryAttributes %}
                           <th>{{ attribute.name }}</th>
                        {% endfor %}
                        <th>Created By</th>
                        <th>Created At</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in pagination %}
                        <tr>
                            <td><input type="checkbox" name="items_ids[]" value="{{ item.id }}"></td>
                            <td>{{ item.customId }}</td>
                            {% for attribute in inventory.inventoryAttributes %}
                                <td>
                                    {% set valueFound = false %}
                                    {% for attrValue in item.itemAttributeValues %}
                                        {% if attrValue.attribute.id == attribute.id %}
                                            {% if attribute.type.value == 'bool' %}
                                                {% if attrValue.value == '1' or attrValue.value == 'true' %}
                                                    <span class="badge bg-success">✓ Yes</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">✗ No</span>
                                                {% endif %}
                                            {% elseif attribute.type.value == 'int' %}
                                                <span class="text-end d-block">{{ attrValue.value }}</span>
                                            {% else %}
                                                {{ attrValue.value }}
                                            {% endif %}
                                            {% set valueFound = true %}
                                        {% endif %}

                                    {% endfor %}

                                    {% if not valueFound %}
                                        <span class="text-muted fst-italic">-</span>
                                    {% endif %}
                                </td>
                            {% endfor %}
                            <td>{{ item.createdBy.username }}</td>
                            <td>{{ item.createdAt|date('Y-m-d H:i') }}</td>
                        </tr>
                    {% endfor %}
                </table>
            {% else %}
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(pagination) }}
                </div>
                <div class="alert alert-info">
                    No items yet.
                    <a href="{{ path('app_inventory_item_create', {'inventoryId': inventory.id}) }}">
                        Create the first one!
                    </a>
                </div>
            {% endif %}


        <div class="btn-toolbar" role="toolbar">
            <div class="btn-group me-2" role="group">
                <a href="{{ path('app_inventory_item_create', {'inventoryId': inventory.id}) }}" class="btn btn-primary">
                    <i class="fas fa-save"></i>Add New Item
                </a>
            </div>

            <div class="btn-toolbar" role="toolbar">
                <div class="btn-group me-2" role="group">
                    <a href="{{ path('app_inventory_index') }}" class="btn btn-outline-dark">
                        <i class="fas fa-arrow-left"></i>Back to Inventories
                    </a>
                </div>

                <button type="button"
                        id="deleteSelectedBtn"
                        class="btn btn-outline-danger"
                        disabled>
                    <i class="fas fa-trash"></i> Delete Selected
                </button>
    </div>
</div>
    </div>
</div>
{% endblock %}


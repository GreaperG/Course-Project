{% extends 'base.html.twig' %}

{% block title %}Create Item for Inventory {% endblock %}

{% block body %}
  <div class="container">
      <h1>Create new Item</h1>

      {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
      {{ form_end(form)  }}

      <a href="{{ path('app_inventory_items', {'inventoryId': inventory.id}) }}" class="btn btn-secondary-mt-3">

          Back to Inventory
      </a>
  </div>
{% endblock %}
